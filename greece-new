    <script>
        function getURLParameters() {
            const urlParams = new URLSearchParams(window.location.search);
            return {
                advisor: urlParams.get('advisor'),
                client: urlParams.get('client'),
                property: urlParams.get('property'),
                unit: urlParams.get('unit'),
                currentProgress: urlParams.get('currentProgress'),
                completion: urlParams.get('completion'),
                transferStatus: urlParams.get('transferStatus'),
                transferDate: urlParams.get('transferDate'),
                approvalStatus: urlParams.get('approvalStatus'),
                approvalDate: urlParams.get('approvalDate'),
                cardStatus: urlParams.get('cardStatus'),
                cardDate: urlParams.get('cardDate')
            };
        }

        function formatExcelDate(serialNumber) {
            if (!serialNumber) return '';
            const date = new Date((serialNumber - 25569) * 86400 * 1000);
            return date.toLocaleDateString('zh-CN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
        }

        function populateContent() {
            const params = getURLParameters();
            
            document.getElementById('advisor').textContent = params.advisor || '未指定';
            document.getElementById('client').textContent = params.client || '尊敬的客户';
            document.getElementById('property').textContent = params.property || '未指定';
            document.getElementById('unit').textContent = params.unit || '';
            document.getElementById('currentProgress').textContent = params.currentProgress || '进行中';
            document.getElementById('completion').textContent = params.completion || '0';
            
            document.getElementById('transferStatus').textContent = params.transferStatus || '';
            document.getElementById('transferDate').textContent = params.transferDate || '';
            document.getElementById('approvalStatus').textContent = params.approvalStatus || '';
            document.getElementById('approvalDate').textContent = params.approvalDate || '';
            document.getElementById('cardStatus').textContent = params.cardStatus || '';
            document.getElementById('cardDate').textContent = params.cardDate || '';
        }

        window.addEventListener('DOMContentLoaded', populateContent);
    </script>
